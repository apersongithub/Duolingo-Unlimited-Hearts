{
  "manifest_version": 3,
  "name": "Duolingo Max",
  "version": "3.3",
  "description": "Gives Duolingo Max features for free",

  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },

  "permissions": [
    "storage",
    "webRequest",
    "webRequestBlocking",
    "webRequestFilterResponse"
  ],
  "host_permissions": [
    "https://d35aaqx5ub95lt.cloudfront.net/*",
    "https://*.duolingo.com/*",
    "https://*.duolingo.cn/*",
    "https://raw.githubusercontent.com/*"
  ],

  "background": {
    "scripts": [
      "shared/patches.js",
      "background.js"
    ]
  },

  "content_scripts": [
    {
      "matches": [
        "https://d35aaqx5ub95lt.cloudfront.net/*",
        "https://*.duolingo.cn/*",
        "https://*.duolingo.com/*"
      ],
      "js": [
        "content_script.js",
        "exploit_banner.js"
      ],
      "run_at": "document_start"
    }
  ],

  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },

  "web_accessible_resources": [
    {
      "resources": [
        "injection.js",
        "shared/patches.js",
        "page_hook.js",
        "popup.js",
        "popup.css",
        "exploit_banner.js",
        "options.js",
        "userscripts/patch4.js",
        "userscripts/patch5.js"
      ],
      "matches": [
        "https://d35aaqx5ub95lt.cloudfront.net/*",
        "https://*.duolingo.cn/*",
        "https://*.duolingo.com/*"
      ]
    }
  ],

  "browser_specific_settings": {
    "gecko": {
      "id": "{9a46ec17-f439-494a-9e72-43692c969758}"
    }
  }
}