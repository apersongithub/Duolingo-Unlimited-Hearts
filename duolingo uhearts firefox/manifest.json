{
  "manifest_version": 2,
  "name": "Duolingo Unlimited Hearts",
  "version": "2.0",
  "description": "Gives unlimited hearts in Duolingo for free",
    "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "permissions": [
    "storage",
    "webRequest",
    "webRequestBlocking",
    "https://d35aaqx5ub95lt.cloudfront.net/*",
    "https://*.duolingo.com/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "https://d35aaqx5ub95lt.cloudfront.net/*",
        "https://*.duolingo.com/*"
      ],
      "js": [
        "content_script.js",
        "exploit_banner.js"
      ],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
        "injection.js",
        "popup.js",
        "popup.css",
        "exploit_banner.js"
  ]
}
